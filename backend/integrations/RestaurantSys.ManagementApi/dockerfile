# --- base runtime (9.0) ---
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080

# --- build (9.0 SDK) ---
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore
RUN dotnet publish -c Release -o /out --no-restore

# --- final ---
FROM base
WORKDIR /app
COPY --from=build /out .
ENTRYPOINT ["dotnet", "RestaurantSys.ManagementApi.dll"]  /* change if your dll name differs */
